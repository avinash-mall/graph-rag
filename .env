# OpenAI API Configuration
EMBEDDING_API_URL=http://localhost:8081/embedding
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL=llama
OPENAI_BASE_URL=http://localhost:8080/v1/chat/completions
OPENAI_STOP=["<|end_of_text|>", "<|eot_id|>"]
OPENAI_TEMPERATURE=0.0

# Application Settings
DEBUG_RERANKING=false
SLEEP_DURATION=0.1
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FILE=app.log

# Neo4j Database Configuration
DB_URL=bolt://localhost:7687
DB_USERNAME=neo4j
DB_PASSWORD=neo4j

# Document & Graph Processing Parameters
CHUNK_SIZE=600
OVERLAP_SIZE=100

# Vector Index and Search Parameters
VECTOR_INDEX_NAME=chunk-embeddings
VECTOR_DIMENSIONS=1024
VECTOR_SIMILARITY_FUNCTION=cosine
VECTOR_SEARCH_THRESHOLD=0.8

# Graph Projection
GRAPH_NAME=entityGraph

# Embedding API Model
EMBEDDING_MODEL=mxbai-embed-large

# Hybrid Search
FULLTEXT_INDEX_NAME=chunkFulltext
