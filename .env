# OpenAI API Configuration
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL=llama3.1
OPENAI_BASE_URL=https://localhost/v1/chat/completions
OPENAI_STOP=["<|end_of_text|>", "<|eot_id|>"]
OPENAI_TEMPERATURE=0.0

# Embedding API Configuration
EMBEDDING_API_URL=http://localhost:8081/embedding

# Application Settings
SLEEP_DURATION=0.1
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FILE=app.log

# Neo4j Database Configuration
DB_URL=bolt://localhost:7687
DB_USERNAME=neo4j
DB_PASSWORD=neo4j

# Document & Graph Processing Parameters
CHUNK_SIZE_VECTOR=512
CHUNK_SIZE_GDS=4096

# Graph Projection
GRAPH_NAME=entityGraph

# Elasticsearch Configuration
ES_HOST_URL=http://localhost:9200
ES_USERNAME=elastic
ES_PASSWORD=elastic
ES_INDEX_NAME=chunk-embeddings

# Vector Settings for Elasticsearch
VECTOR_DIMENSIONS=1024
VECTOR_SIMILARITY_FUNCTION=max_inner_product
NUM_RESULTS=10
NUM_CANDIDATES=100
MIN_SCORE=1.78

# Flair API Configuration
FLAIR_API_URL=https://localhost:8001

# Graph Context API Configuration
GRAPH_CONTEXT_API_URL="http://localhost:8002/get_graph_context"

# Filter by document ID when calling Graph Context API (true or false)
FILTER_BY_DOCID=false

# Common API call timeout (in seconds)
API_TIMEOUT=600
